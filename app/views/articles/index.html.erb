<h1>Articles listing page</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td class ="action-buttons">
                <%= button_to 'Show', article_path(article), method: :get, class: "show-button" %>
                <%= button_to 'Edit', edit_article_path(article), method: :get, class: "edit-button" %>
                <%= button_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete #{article.title}?" }, class: "delete-button" %>
            </td>
        </tr>
        <% end %>
        <tr>
            <td colspan="3">
                <%= link_to 'Create New Article', new_article_path, class: "create-button" %>
            </td>
        </tr>
    </tbody>
</table>