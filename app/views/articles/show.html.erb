<h1>Showing article details</h1>

<% if @article.present?%>
    <p><strong>Title:</strong> <%= @article.title %></p>
    <p><strong>Description:</strong> <%= @article.description %></p>
<% else%>
    <p>Articles not found</p>
<% end %>

<div class="action-buttons">
    <%= link_to "Back to Articles", articles_path, class: "back-button" %>
    <%= button_to "Edit Article", edit_article_path(@article), method: :get, class: "edit-button" %>
    <%= button_to "Delete Article", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete #{@article.title}?"}, class: "delete-button" %>
</div>
 